	//元素逆置
    int arr[6] = { 1, 2, 3, 4, 5, 6 };
 
    
	for (int i = 0; i < 6; i++)
	{
		cout << arr[i]<<endl ;
	}
	int start = 0;
    int end = sizeof(arr) / sizeof(arr[0]) - 1;
	
	cout << "逆置后" << endl;
	while (start < end)
	{
		int temp = arr[start];
		arr[start] = arr[end];
		arr[end] = temp;
		start++;
		end--;
	}
	for (int i = 0; i < 6; i++)
	{
		cout << arr[i] <<endl;
	}

   
	
